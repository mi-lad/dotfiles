{
    "editor.fontFamily": "'IBMPlexMono-Bold', 'IBM Plex Mono SemiBold', 'Courier New', Menlo",
    "editor.fontSize": 17,
    "editor.tabSize": 4,
    "editor.mouseWheelZoom": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "phase",
    "editor.rulers": [80, 120],
    "editor.wordWrapColumn": 80,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": false,
    "editor.wordBasedSuggestions": false,
    "editor.cursorStyle": "line",
    "editor.formatOnPaste": false,
    "editor.suggestSelection": "first",
    // "explorer.openEditors.visible": 0,
    // "editor.cursorSmoothCaretAnimation": true,

    "workbench.statusBar.visible": true,
    "workbench.statusBar.feedback.visible": false,
    "workbench.tips.enabled": false,
    "workbench.activityBar.visible": true,
    "workbench.iconTheme": "ayu",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Gruvbox Dark Medium",

    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,

    "explorer.decorations.colors": false,
    "explorer.decorations.badges": false,
    "explorer.sortOrder": "type",

    "terminal.integrated.macOptionClickForcesSelection": true,
    "terminal.integrated.fontFamily": "'IBMPlexMono-Bold', 'IBM Plex Mono SemiBold', 'Courier New', Menlo",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.inheritEnv": false,

    "scm.diffDecorationsGutterWidth": 2,
    "scm.diffDecorations": "gutter",

    "window.zoomLevel": 0,
    "telemetry.enableTelemetry": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,
    "git.autofetch": true,


    // Disable italics in comment blocks
    // From https://stackoverflow.com/a/46278282/298209
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Comment",
                "scope": [
                    "comment",
                    "comment.block",
                    "comment.block.documentation",
                    "comment.line",
                    "comment.line.double-slash",
                    "punctuation.definition.comment",
                ],
                "settings": {
                    "fontStyle": "",
                    // "fontStyle": "italic",
                    // "fontStyle": "italic underline",
                    // "fontStyle": "italic bold underline",
                }
            },
        ]
    },

    // =========================================================================
    // Per file type settings
    // =========================================================================

    "[python]": {
        "editor.tabSize": 2
    },

    "[latex]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
        "editor.rulers": []
    },

    "[markdown]":{
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80,
    },

    "[todo]": {
        "editor.quickSuggestions": false,
        "editor.renderWhitespace": "none",
        "editor.renderControlCharacters": false,
    },

    // =========================================================================
    // Extension settings
    // =========================================================================

    "python.jediEnabled": false,  // Use Microsoft Python Analysis instead
    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "python.formatting.provider": "yapf",
    "python.formatting.yapfArgs": [
        "--style", "{indent_width: 2, continuation_indent_width: 2, dedent_closing_brackets: True, column_limit:80}"
    ],

    // Providing pylintArgs disables all the sensible defaults that VSCode
    // applies. I have therefore copy-pasted them manually (see
    // pylintUseMinimalCheckers). The real change I want to make here is
    // extension-pkg-whitelist
    "python.linting.pylintArgs": [
        "--disable=all","--enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode","--extension-pkg-whitelist=torch,numpy"],

    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,

    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.message.error.show": false,
    "latex-workshop.message.warning.show": false,
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "-pdf",
              "-outdir=%OUTDIR%",
              "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk-with-xelatex",
            "command": "latexmk",
            "args": [
              "-xelatex",
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "-outdir=%OUTDIR%",
              "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
              "%DOCFILE%"
            ],
            "env": {}
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex ðŸ”ƒ",
            "tools": [
                "xelatex"
            ]
        },
        {
            "name": "latexmk with xelatex ðŸ”ƒ",
            "tools": [
                "latexmk-with-xelatex",
            ]
        },
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "pdflatex âžž bibtex âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
    ],

    "todo.embedded.provider": "ag",
    "todo.symbols.box": "[ ]",
    "todo.symbols.cancelled": "-",
    "todo.symbols.done": "x",

    "spellright.language": ["en_GB"],
    "spellright.groupDictionaries": false,
    "spellright.configurationScope": "user",
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "python"
    ],
    "spellright.spellContext": "comments",
    "spellright.statusBarIndicator": false,

    "fileutils.delete.useTrash": true,

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.editor.enablePreview": false,
    "git-graph.showStatusBarItem": false,
    "rewrap.autoWrap.enabled": false,
}
