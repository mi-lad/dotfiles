{
    "editor.fontFamily": "'IBMPlexMono-Bold', 'IBM Plex Mono SemiBold', 'Courier New', Menlo",
    "editor.fontSize": 17,
    "editor.tabSize": 4,
    "editor.mouseWheelZoom": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "phase",
    "editor.rulers": [80, 120],
    "editor.wordWrapColumn": 80,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": false,
    "editor.wordBasedSuggestions": false,
    "editor.cursorStyle": "line",
    // "editor.cursorSmoothCaretAnimation": true,
    "editor.formatOnPaste": false,

    "workbench.statusBar.feedback.visible": false,
    "workbench.activityBar.visible": true,
    "workbench.statusBar.visible": true,
    "workbench.iconTheme": "ayu",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tips.enabled": false,

    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,

    "explorer.decorations.colors": false,
    "explorer.decorations.badges": false,
    "explorer.sortOrder": "type",

    "scm.diffDecorationsGutterWidth": 2,
    "scm.diffDecorations": "gutter",

    "window.zoomLevel": 0,
    "telemetry.enableTelemetry": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "git.autofetch": true,

    "terminal.integrated.macOptionClickForcesSelection": true,
    "terminal.integrated.fontFamily": "Perplexed-Bold",
    "terminal.integrated.fontSize": 13,

    // Disable italics in comment blocks
    // From https://stackoverflow.com/a/46278282/298209
    "editor.tokenColorCustomizations": {
    "textMateRules": [
        {
            "name": "Comment",
            "scope": [
                "comment",
                "comment.block",
                "comment.block.documentation",
                "comment.line",
                "comment.line.double-slash",
                "punctuation.definition.comment",
            ],
            "settings": {
                "fontStyle": "",
                // "fontStyle": "italic",
                // "fontStyle": "italic underline",
                // "fontStyle": "italic bold underline",
            }
        },
    ]
    },

    // =========================================================================
    // Per file type settings
    // =========================================================================

    "[python]": {
        "editor.tabSize": 2
    },

    "[latex]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80,
        "editor.rulers": []
    },

    "[markdown]":{
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80,
    },

    // =========================================================================
    // Extension settings
    // =========================================================================

    "git-graph.showStatusBarItem": false,

    "python.dataScience.sendSelectionToInteractiveWindow": true,
    "python.formatting.provider": "yapf",
    // "python.formatting.yapfArgs": ["--style", "{indent_width: 2}"],
    // "{dedent_closing_brackets: True}"],
    "python.formatting.yapfArgs": ["--style", "{indent_width: 2, continuation_indent_width: 2, dedent_closing_brackets: True}"],

    // Providing pylintArgs disables sensinble defaults that VSCode applies. I
    // have therefore copy-pasted them manually (see pylintUseMinimalCheckers).
    // The real change I want to make here is extension-pkg-whitelist
    "python.linting.pylintArgs": ["--disable=all","--enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode","--extension-pkg-whitelist=torch,numpy"],

    "rewrap.autoWrap.enabled": true,

    "latex-workshop.view.pdf.viewer": "tab",
    // "latex-workshop.latex.outputDir": "./_output",
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "pdflatex âžž bibtex âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "xelatex ðŸ”ƒ",
            "tools": [
                "xelatex"
            ]
        },
    ],

    "todo.embedded.provider": "ag",
    "todo.symbols.box": "[ ]",
    "todo.symbols.cancelled": "-",
    "todo.symbols.done": "x",

    "spellright.language": [
        "en_GB"
    ],
    "spellright.groupDictionaries": false,
    "spellright.configurationScope": "user",
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "python"
    ],
    "spellright.spellContext": "comments",
    "spellright.statusBarIndicator": false,


    "fileutils.delete.useTrash": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.jediEnabled": false,
    "workbench.colorTheme": "Noctis Viola",
    "diffEditor.renderSideBySide": true,
}