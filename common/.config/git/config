    signingKey = 001819C28CB14E7F
[color]
    ui = auto
[core]
    editor = vim
    pager = less
[push]
    default = simple
[commit]
    gpgSign = true
[gpg]
    program = "gpg2"
[diff]
    tool = icdiff
[difftool]
    prompt = false
[difftool "p4merge"]
    cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "\"$LOCAL\"" "\"$REMOTE    \""
[difftool "icdiff"]
      cmd = icdiff --line-numbers $LOCAL $REMOTE
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[alias]
    wdiff = diff --color-words
[color "status"]
    added = yellow
    changed = green
    untracked = magenta
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red reverse
    new = green reverse
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[credential]
    helper = cache --timeout=36000
[pull]
	rebase = true
[init]
	defaultBranch = main
